{
    "parser": "babel-eslint",
    "plugins": [
        "babel",
        "import",
        "react"
    ],
    "extends": [
        "google",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:react/recommended"
    ],
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "strict": 0,
        "max-len": [2, 160, 4],
        "linebreak-style": 0,
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "dot-notation": [2, {"allowPattern": "^[a-z]+(_[a-z]+)+$"}],
        "radix": [2, "as-needed"],
        "no-undef": 2,
        "no-extra-semi": 0,
        "prefer-const": 1,
        "comma-dangle": 0,
        "require-jsdoc": 0,
        "quote-props": [1, 'as-needed'],
        "space-before-function-paren": [1, {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "no-unused-vars": 1,

        "new-cap": 0,
        "object-curly-spacing": 0,
        "no-await-in-loop": 0,
        "no-invalid-this": 0,
        "babel/new-cap": 1,
        "babel/object-curly-spacing": 1,
        "babel/no-invalid-this": 1,
        "import/order": 2,
        "import/no-unresolved": 0,
        "react/no-deprecated": 1,
    }
}
